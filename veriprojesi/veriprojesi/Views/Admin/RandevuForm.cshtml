

@model veriprojesi.Models.Randevu
@{
    ViewBag.Title = "RandevuForm";
    Layout = "~/Views/Shared/AdminLayout.cshtml";


}
<style>

    #ekleme {
        font-family: Arial, Helvetica, sans-serif;
        border-collapse: collapse;
        width: 100%;
    }

        #ekleme td, #musteriler th {
            border: 1px solid red;
            padding: 8px;
        }

        #ekleme tr:nth-child(even) {
            background-color: beige;
        }

        #ekleme tr:hover {
            background-color: white;
        }

        #ekleme th {
            padding-top: 12px;
            padding-bottom: 12px;
            text-align: left;
            background-color: orange;
            color: white;
        }

    .btn {
        background-color: deeppink;
        color: white;
        border: 2px solid beige;
        border-radius: 4px;
        font-size: 20px;
    }

    body {
        background-color: beige;
    }

    .container {
        background-color: pink;
        border: 5px solid red;
        text-align: center;
        margin-left: 25%;
        width: 900px;
        height: 250px;
        margin-top: 5%;
    }

    h4 {
        color: red;
        font-size: x-large;
        text-align: center
    }
</style>

<div class="content-wrapper">
    <div class="container">
        <h4>Randevu Formu</h4>
        @using (Html.BeginForm("RandevuKaydet", "Admin", FormMethod.Post, new { @enctype = "multipart/form-data" }))
        {
            <table class="table table bordered" id="ekleme">
                <tr>
                    <td>Musteri ID</td>
                    <td>
                        @Html.TextBoxFor(r => r.musteri_id, new { @class = "form-control" })
                        @Html.ValidationMessageFor(r => r.musteri_id)
                    </td>
                    <td>İşlem ID</td>
                    <td>
                        @Html.TextBoxFor(r => r.ıslem_id, new { @class = "form-control" })
                        @Html.ValidationMessageFor(r => r.ıslem_id)
                    </td>
                    <td>Randevu Tarihi</td>
                    <td>
                        @Html.TextBoxFor(r => r.randevu_tarih, new { @class = "form-control" })
                        @Html.ValidationMessageFor(r => r.randevu_tarih)
                    </td>
                    <td>
                        @Html.HiddenFor(r => r.musteri_id);
                        @Html.HiddenFor(r => r.ıslem_id);
                        @Html.HiddenFor(r => r.randevu_id);
                    </td>

                </tr>

            </table><br /> <br />
            <input type="submit" value="Kaydet" class="btn btn-primary" />


        }
    </div>

</div>


