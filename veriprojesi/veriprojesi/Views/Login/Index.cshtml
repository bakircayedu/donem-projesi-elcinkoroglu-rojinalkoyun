@model veriprojesi.Models.SistemAdmini
@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title> Giriş Yap</title>
 

    <style>
        body {
            margin: 0;
            padding: 0;
            background-image: url('/Content/tarte.jpg');
            background-repeat: no-repeat;
            background-position: center center;
            background-size: cover;
            background-attachment: fixed;
            padding-top: 30px;
            padding-bottom: 30px;
            padding-left: 40px;
            padding-right: 40px;
        }

        .card {
            background-color: beige;
            border: 5px solid saddlebrown;
            text-align: center;
            margin-left: 20%;
            width: 900px;
            height: 250px;
            margin-top: 10%;
        }

        .login-box-msg {
            color: saddlebrown;
            font-family: Arial, Helvetica, sans-serif
        }
        label{
            color:saddlebrown
        }
    </style>
</head>

<body class="hold-transition login-page">
       
        <div class="card">
            <div class="card-body login-card-body">
                <p class="login-box-msg"><b>SALON SAHİBİ GİRİŞİ</b></p>
                 @using (Html.BeginForm("Alogin", "login", new { FormMethod.Post}))
                 {
                  @Html.AntiForgeryToken(); <br/>
            <div class="input-group mb-3">
                <label><b>Kullanıcı Adınızı Girin</b></label><br/>
                @Html.TextBoxFor(s => s.kullanici_adi, new { @class = "form-control" , placeholder = "Kullanıcı Adı", autofocus="autofocus"})
               
                <div class="input-group-append">
                    <div class="input-group-text">
                        <span class="fas fa-envelope"></span>
                    </div>
                </div>
            </div><br/><br/>
            <div class="input-group mb-3">
                <label><b>Şifrenizi Girin</b></label><br/>
                @Html.PasswordFor(s => s.sifre, new { @class = "form-control", placeholder = "Şifre"})
                <div class="input-group-append">
                    <div class="input-group-text">
                        <span class="fas fa-lock"></span>
                    </div>
                </div>
            </div><br/>
                    <div class="row">
                        <div class="col-4">
                            <button type="submit" class="btn btn-primary btn-block">Giriş Yap</button>
                        </div>
                        <!-- /.col -->
                    </div>

                }
                @if (ViewBag.Hata!=null)
                {
                     <div class="alert alert-danger mt-4">
                         @ViewBag.Hata
                     </div>
                }

            </div>
            
        </div>
</body>
</html>
