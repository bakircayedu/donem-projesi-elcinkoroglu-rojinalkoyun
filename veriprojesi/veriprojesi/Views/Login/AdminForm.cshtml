@model veriprojesi.Models.SistemAdmini 
@{
    ViewBag.Title = "AdminForm";
    Layout = "~/Views/Shared/AdminLayout.cshtml";
}

<style>

    #ekleme {
        font-family: Arial, Helvetica, sans-serif;
        border-collapse: collapse;
        width: 100%;
    }

        #ekleme td, #adminler th {
            border: 1px solid red;
            padding: 8px;
        }

        #ekleme tr:nth-child(even) {
            background-color: beige;
        }

        #ekleme tr:hover {
            background-color: white;
        }

        #ekleme th {
            padding-top: 12px;
            padding-bottom: 12px;
            text-align: left;
            background-color: orange;
            color: white;
        }

    .btn {
        background-color: deeppink;
        color: white;
        border: 2px solid beige;
        border-radius: 4px;
        font-size: 20px;
    }

    body {
        background-color: beige;
    }

    .container {
        background-color: pink;
        border: 5px solid red;
        text-align: center;
        margin-left: 25%;
        width: 900px;
        height: 250px;
        margin-top: 5%;
    }

    h4 {
        color: red;
        font-size: x-large;
        text-align: center
    }
</style>

<div class="content-wrapper">
    <div class="container">
        <h4>Admin Formu</h4>
        @using (Html.BeginForm("AdminKaydet", "login", FormMethod.Post, new { @enctype = "multipart/form-data" }))
        {
            <table class="table table bordered" id="ekleme">
                <tr>
                    <td>Kullanıcı Adı</td>
                    <td>
                        @Html.TextBoxFor(s => s.kullanici_adi, new { @class = "form-control" })
                        @Html.ValidationMessageFor(s => s.kullanici_adi)
                    </td>
                    <td>Şifre</td>
                    <td>
                        @Html.TextBoxFor(s => s.sifre, new { @class = "form-control" })
                        @Html.ValidationMessageFor(s => s.sifre)
                    </td>

                    <td>
                        @Html.HiddenFor(s => s.admin_id);
                        @Html.HiddenFor(s => s.sifre);

                    </td>

                </tr>

            </table><br /> <br />
            <input type="submit" value="Kaydet" class="btn btn-primary" />


        }
    </div>

</div>




